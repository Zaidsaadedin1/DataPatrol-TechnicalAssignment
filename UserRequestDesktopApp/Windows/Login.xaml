<Window x:Class="UserRequestApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10" Text="zaid&#xD;&#xA;zaid"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Login" Height="30" Click="BtnLogin_Click"/>

            <TextBlock x:Name="lblStatus" Margin="0,10,0,0" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>