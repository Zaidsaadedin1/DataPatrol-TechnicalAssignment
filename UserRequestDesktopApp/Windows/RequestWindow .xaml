<Window x:Class="UserRequestApp.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Request" Height="350" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Request Code:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtRequestCode" Margin="0,0,0,10"/>

            <TextBlock Text="Description:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Height="100" AcceptsReturn="True" 
                     TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button x:Name="btnCreate" Content="Create Request" Height="30" Click="BtnCreate_Click"/>
            <Button x:Name="btnViewSummary" Content="View Summary" Height="30" Margin="0,10,0,0" 
                    Click="BtnViewSummary_Click"/>

            <TextBlock x:Name="lblStatus" Margin="0,10,0,0" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>